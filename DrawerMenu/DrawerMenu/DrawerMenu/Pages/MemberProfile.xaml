          <!--<Entry x:Name="LastNameText" />-->

          <Label >
            <Label.FormattedText>
              <FormattedString>
                <Span Text="Choose Gender"></Span>
                <Span Text="*" ForegroundColor="Red"></Span>
              </FormattedString>
            </Label.FormattedText>
          </Label>
          <Picker x:Name="GnderPicker"  Title="Choose Gender" SelectedIndex="{Binding Industry}" HorizontalOptions="FillAndExpand">
            <Picker.Items>
              <x:String >Male</x:String>
              <x:String>Female</x:String>
