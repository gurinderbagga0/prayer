          <renderer:EntryExt ReturnKeyType="Default" FontSize="14" FontFamily="Arial" TextColor="#8899a6" BackgroundColor="#eaeaea" WidthRequest="240" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" x:Name="FirstNameText" />
          <!--<Entry x:Name="FirstNameText"   />-->
          <Label >
            <Label.FormattedText>
