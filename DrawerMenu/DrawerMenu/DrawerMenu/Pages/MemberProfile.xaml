        <StackLayout HorizontalOptions="FillAndExpand" Padding="0,0,0,0" >

          <Label >
            <Label.FormattedText>
              <FormattedString>
                <Span Text="E-mail Address" ></Span>
                <Span x:Name="EmailAddressValidation" Text="*" ForegroundColor="Red"></Span>
              </FormattedString>
            </Label.FormattedText>
          </Label>
         

          <renderer:EntryExt ReturnKeyType="Default" FontSize="14" FontFamily="Arial" TextColor="#8899a6" BackgroundColor="#eaeaea" WidthRequest="240" HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" Keyboard="Email" x:Name="EmailAddressText" />
          <!--<Entry x:Name="EmailAddressText" Keyboard="Email"   >
          </Entry>-->
